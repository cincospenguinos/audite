#!/usr/bin/env ruby

require 'curses'
require 'audite'

player = Audite.new

player.events.on(:position_change) do |pos|
  p = (player.tell / player.length * Curses.cols).ceil
  l = (player.level * Curses.cols).ceil
  Curses.setpos(0, 0)
  Curses.addstr("playing #{player.current_song_name}    #{player.position.ceil} seconds of #{player.length_in_seconds.ceil} total")
  Curses.setpos(1, 0)
  Curses.addstr("#" * p + " " * (Curses.cols - p))
  Curses.setpos(2, 0)
  Curses.addstr(">" * l + " " * (Curses.cols - l))
  Curses.refresh
end

player.events.on(:complete) do
  if !player.active
    player.close
  end
end

Curses.init_screen
Curses.noecho
Curses.stdscr.keypad(true)
Curses.clear

player.load(ARGV)
player.start_stream

while c = Curses.getch
  case c
    when Curses::KEY_LEFT
      player.rewind
    when Curses::KEY_RIGHT
      player.forward
    when ' '
      player.toggle
  end
end

player.thread.join
